<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/grad_bg">

    <Button
        android:id="@+id/buttonExercises"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:width="210dp"
        android:height="50dp"
        android:text="Exercises"
        android:backgroundTint="@color/transparent"/>

    <Button
        android:id="@+id/buttonPrograms"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/buttonExercises"
        android:width="210dp"
        android:height="50dp"
        android:text="Programs"
        android:backgroundTint="@color/transparent"/>

    <Button
        android:id="@+id/btnMonday"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/buttonPrograms"
        android:text="Monday"
        android:layout_marginTop="10dp"
        android:backgroundTint="@color/transparent"
        android:layout_centerHorizontal="true"/>

    <Button
        android:id="@+id/btnTuesday"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnMonday"
        android:text="Tuesday"
        android:layout_marginTop="10dp"
        android:backgroundTint="@color/transparent"
        android:layout_centerHorizontal="true"/>

    <Button
        android:id="@+id/btnWednesday"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnTuesday"
        android:text="Wednesday"
        android:layout_marginTop="10dp"
        android:backgroundTint="@color/transparent"
        android:layout_centerHorizontal="true"/>

    <Button
        android:id="@+id/btnThursday"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnWednesday"
        android:text="Thursday"
        android:layout_marginTop="10dp"
        android:backgroundTint="@color/transparent"
        android:layout_centerHorizontal="true"/>

    <Button
        android:id="@+id/btnFriday"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnThursday"
        android:text="Friday"
        android:layout_marginTop="10dp"
        android:backgroundTint="@color/transparent"
        android:layout_centerHorizontal="true"/>

    <Button
        android:id="@+id/btnSaturday"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnFriday"
        android:text="Saturday"
        android:layout_marginTop="10dp"
        android:backgroundTint="@color/transparent"
        android:layout_centerHorizontal="true"/>

    <Button
        android:id="@+id/btnSunday"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnSaturday"
        android:text="Sunday"
        android:layout_marginTop="10dp"
        android:backgroundTint="@color/transparent"
        android:layout_centerHorizontal="true"/>


</RelativeLayout>

<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:background="@drawable/grad_bg">


    <TextView
        android:id="@+id/txtWelcome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_marginStart="21dp"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="30dp"
        android:text="Hello " />

    <TextView
        android:id="@+id/txtName"
        android:layout_marginTop="30dp"
        android:layout_toRightOf="@+id/txtWelcome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />


    <TextView
        android:id="@+id/txtInfo"
        android:text="From the information you have provided, the follwing calculations has been made"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="40dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/txtName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/txtBRMInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtInfo"
        android:layout_alignParentStart="true"
        android:layout_marginStart="20dp"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="10dp"
        android:text="You Basic Metabloic Rate is:" />

    <TextView
        android:id="@+id/txtBMR"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginStart="14dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="106dp"
        android:layout_toEndOf="@+id/txtBRMInfo"
        android:layout_toRightOf="@+id/txtBRMInfo" />


    <TextView
        android:id="@+id/txtTDEEInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtBRMInfo"
        android:layout_alignParentStart="true"
        android:layout_marginStart="19dp"
        android:layout_marginTop="8dp"
        android:text="Your Total Daily Energy Expenditure is:" />


    <TextView
        android:id="@+id/txtActivity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtBMR"
        android:layout_marginStart="4dp"
        android:layout_marginLeft="4dp"
        android:layout_marginTop="8dp"
        android:layout_toEndOf="@+id/txtTDEEInfo"
        android:layout_toRightOf="@id/txtTDEEInfo" />



</RelativeLayout >
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/grad_bg">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <Button
        android:id="@+id/buttonTraining"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:width="210dp"
        android:height="50dp"
        android:backgroundTint="@color/transparent"
        android:text="Training" />

    <Button
        android:id="@+id/buttonExercises"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_toEndOf="@+id/buttonTraining"
        android:width="210dp"
        android:height="50dp"
        android:backgroundTint="@color/transparent"
        android:text="Exercises" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/buttonTraining" />

    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/buttonExercises"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="30dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="20dp">

        <Button
            android:id="@+id/button1"
            android:layout_width="130dp"
            android:layout_row="1"
            android:layout_column="1"
            android:layout_gravity="left|top"
            android:background="@color/transparent"
            android:text="Weightlifting" />

        <Button
            android:id="@+id/button2"
            android:layout_width="130dp"
            android:layout_row="2"
            android:layout_column="1"
            android:layout_gravity="left|top"
            android:background="@color/transparent"
            android:text="Cardio" />

        <Button
            android:id="@+id/button3"
            android:layout_width="130dp"
            android:layout_row="3"
            android:layout_column="1"
            android:layout_gravity="left|top"
            android:background="@color/transparent"
            android:text="Swimming" />

        <Button
            android:id="@+id/button4"
            android:layout_width="130dp"
            android:layout_row="4"
            android:layout_column="1"
            android:layout_gravity="left|top"
            android:background="@color/transparent"
            android:text="Interval" />


    </GridLayout>


</RelativeLayout>
